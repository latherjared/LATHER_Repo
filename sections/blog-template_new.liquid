<div id="page" data-section-id="{{ section.id }}" data-section-type="blog-section">
<div class="wid_100_blog">
  <div class="width_20_blog">
    
   
    <div class="desktop-12 tablet-6 mobile-3">
      <h3 class="b_colr">Press</h3>
      <p class="b_colr">Featured News</p>
      <p><a href ="/pages/makeup-artist-approved">Makeup Artist Favorites</a></p>
       {% if section.settings.text != blank %}
      {{ section.settings.text }}
      {% endif %}
    </div>
    
  </div>
  <div class="wid_80_blog">
  {% if section.settings.image != blank %}
  {%- assign image_size = '1920x' -%}
  {%- assign img_url = section.settings.image | img_url: image_size -%}
  <div class="collection-banner">
    <img src="{{ img_url }}">
  </div>
  {% endif %}  

  <div id="content" class="row new_100_row">	
    {% if settings.breadcrumb %}
    {% include 'breadcrumb' %}	
    {% endif %}	

    <h1 class="page-title desktop-12 tablet-6 mobile-3"></h1>
    
    
    
    
    <div class="clear"></div>

    {% if section.settings.tiled-blog-layout %}
    <div class="desktop-12 tablet-6 mobile-3">
      <div id="article-loop">
       <div class="for_desktop">
         
         <div class="article-index desktop-12 tablet-6 mobile-3" id="article-{{ article.id }}" data-alpha="{{ article.title }}">   
  <div class="article-info new_blg_d"> 
    <div class="article-info-inner">
      <div class="article-content new_cntent_c" id="new_c_c">
        <div class="f_blog_img">
          <img class="article-image" src="https://cdn.shopify.com/s/files/1/3052/3952/files/Bamboo_Lemongrass-3-Step-Set_Crop_800.jpg?18272584402825730613">
        </div>
        <div class="author_img">
          	<img class="article-image" src="https://cdn.shopify.com/s/files/1/3052/3952/files/Pasadena_mag_logo.jpg?3251244503598213344">
          <div class="d_blg">
            <h2 class="blog_text" >Pasadena Magazine</h2>
            <a href="" class="blog_titlecu">women who rule retail </a>
            <div class="readmore new_btn">
              <a class="learn_btn" href="https://cdn.shopify.com/s/files/1/3052/3952/files/pasadena_mag.pdf?2434090759343607110">Learn more</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
         
         
         
         {% include 'cust_productwpdf' %}	
        
   
   </div>
        <div class="for_tab_m cust_mobileview">
 
           {% for article in blog.articles  %} 
       {% include 'cust_productwpdf' %}
          
            {% endfor %} 
          </div>
   
        <!--div class="for_desktop">
           {% for article in blog.articles  %} 
        {% include 'article-loop' %}
            {% endfor %} 
        </div>
        <div class="for_tab_m">
 
           {% for article in blog.articles  %} 
        {% include 'article-loop_t_m'  %}
          
            {% endfor %} 
          </div-->
          
      
      </div>
    </div>
    {% else %}

    <div id="blog-articles" class="desktop-9 tablet-6 mobile-3">
      {% for article in blog.articles  %}
      <div class="single-article">
        <div class="article-body desktop-12 tablet-6 mobile-3">
          <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>      
          {% if section.settings.show-author %}
          <p class="posted author">{{ article.author }}</p>
          {% endif %}
          {% if section.settings.show-date %}
          {% assign published_at = article.published_at | date: format: 'month_date_year' %}
          <p class="posted">{{ 'blogs.article.posted_on_date_html' | t: date: published_at }}</p>
          {% endif %}
          <div class="article-content">
            {% if article.image %}<a href="{{ article.url }}"><img class="article-image" src="{{ article.image | img_url: '800x' }}" alt="{{ article.title }}"></a>{% endif %}
            <div class="clear"></div>          
            {% if article.excerpt == blank %}
            {{ article.content | strip_html | truncatewords: 30 }}
            {% else %}
            {{ article.excerpt }}
            {% endif %}
          </div>        
          {% if article.tags.size > 0 %}
          <ul>
          {% for tag in article.tags %} 
          <li class="tags">
            <a href="{{ blog.url }}/tagged/{{ tag | handle }}">
              {{ tag }}
            </a>
          </li>
          {% endfor %}
          </ul>
          {% endif %}
          <div class="readmore">
            <a href="{{ article.url }}">{{ 'blogs.article.read_more' | t }}</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div> 
    <div id="blog-sidebar" class="desktop-3 tablet-6 mobile-3">

      {% for block in section.blocks %}
      

        {% if block.type == 'tags' %}
        <ul class="blog-tags">
          <h3>{{ block.settings.title | escape }}</h3>
          {% for tag in blog.all_tags %}
          <li class="tags">
            <a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">{{ tag }}</a>
          </li>
          {% endfor %}
        </ul>
      <div class="clear"></div>

        {% elsif block.type == 'social-icons' %}
      
      <ul id="social-icons">
        <h3>{{ block.settings.title | escape }}</h3>  
          {% if settings.facebook_url != blank %}<li><a href="{{ settings.facebook_url }}" target="_blank"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.instagram-id != blank %}<li><a href="//instagram.com/{{ settings.instagram-id }}" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a></li>{% endif %}      
          {% if settings.twittername != blank %}<li><a href="{{ settings.twittername }}" target="_blank"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.pinterest_url != blank %}<li><a href="{{ settings.pinterest_url }}" target="_blank"><i class="fa fa-pinterest fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.tumblr_url != blank %}<li><a href="{{ settings.tumblr_url }}" target="_blank"><i class="fa fa-tumblr fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.youtube_url != blank %}<li><a href="{{ settings.youtube_url }}" target="_blank"><i class="fa fa-youtube fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.googleplus_url != blank %}<li><a href="{{ settings.googleplus_url }}" target="_blank"><i class="fa fa-google-plus-official fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.snapchat-id != blank %}<li><a href="//snapchat.com/add/{{ settings.snapchat-id }}" target="_blank"><i class="fa fa-snapchat-ghost fa-2x" aria-hidden="true"></i></a></li>{% endif %}
          {% if settings.weibo-id != blank %}<li><a href="//weibo.com/{{ settings.weibo-id }}" target="_blank"><i class="fa fa-weibo fa-2x" aria-hidden="true"></i></a></li>{% endif %}
      </ul>
      <div class="clear"></div>

      
        {% elsif block.type == 'image' %}
			
      
      
      {% elsif block.type == 'collection' %}
      <ul id="blog-collection">
        <h3>{{ block.settings.title | escape }}</h3>  
        {%- assign collection = collections[block.settings.collection] -%}      
        {% for product in collection.products limit: 5 %}
        <li class="blog-product" data-alpha="{{ collection.title }}" {{ block.shopify_attributes }}>                 

          {% include 'product-listing' %}

        </li>
        {% endfor %}
      </ul>
      <div class="clear"></div>

      {% endif %}
      {% endfor %}
      
    </div>
    <div class="clear"></div>
    {% endif %}
   
   
  </div>
</div>
  </div>
</div>

{% schema %}
  {
    "name": "Blog page",
    "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
    {
        "id": "text",
        "type": "richtext",
        "label": "Text",
        "default": "<p>Add some descriptive text to your Blog page.</p>"
     },
      {
        "type": "checkbox",
        "id": "tiled-blog-layout",
        "label": "Show blog posts as tiles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show-date",
        "label": "Show published date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show-author",
        "label": "Show author",
        "default": true
      }
    ],
	"blocks":[  
      {  
         "type":"tags",
         "name":"Tags",
		 "limit": 1,
         "settings":[  
           {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Filter"
           }
         ]
      },
      {  
         "type":"social-icons",
         "name":"Social icons",
		 "limit": 1,
         "settings":[  
           {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Connect with us"
           }
         ]
      },
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "label": "Collection",
          "id": "collection",
          "type": "collection"
        },
           {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Featured"
           }
      ]
    }
    ]
  }
{% endschema %}
