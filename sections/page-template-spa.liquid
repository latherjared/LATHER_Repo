<div id="page" class="{% if section.settings.show-narrow-page %}desktop-8 desktop-push-2{% else %}desktop-12{% endif %} tablet-6 mobile-3" data-section-id="{{ section.id }}" data-section-type="page-section">
  <div id="page-content"{% if linklists[section.settings.pagelist] != blank %} class="desktop-9 tablet-4 mobile-3{% endif %}">
    <h1 class="page-title"></h1>
   
    
    
    <div class="desktop-10 float-right tablet-6 mobile-3">
       <div class="flexslider">
      <ul class="slides show_dots">
        {% for block in section.blocks %}
	  		<li>
             <img src="{{ block.settings.img_slidr | img_url: "1024x1024" }}"> 
        </li>
		{% endfor %}
      </ul>
    </div>
      <div class="pad-n">
   	 <div class="rte">{{ page.content }}</div>
      </div>
  </div>
  </div>
   
  {% if linklists[section.settings.pagelist] != blank %}
  <div id="page-sidebar" class="desktop-3 tablet-2 mobile-3">
    <h2>{{ section.settings.page-sidebar-title | escape }}</h2>
    <ul>
      {% for link in linklists[section.settings.pagelist].links %}
      <li>{{ link.title | link_to: link.url }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Page options",
    "settings": [
      {
        "type": "checkbox",
        "id": "show-narrow-page",
        "label": "Reduced page width",
		"info": "For narrow pages"
      },
      {
        "type": "link_list",
        "id": "pagelist",
        "label": "Choose a menu for the page sidebar"
      },
      {
        "type": "text",
        "id": "page-sidebar-title",
        "label": "Page sidebar title",
        "default": "Page sidebar title",
		"info": "When sidebar menu chosen"
      }
    ],
	"blocks": [
    {
      "type": "image",
      "name": "Images",
      "settings": [
        {
          "label": "Slider Image",
          "id": "img_slidr",
          "type": "image_picker"
        }
      ]
    }
  
	]
  }
{% endschema %}
<script>
  jQuery('.flexslider').flexslider({
            slideshowSpeed: 8000,
            animationSpeed: 2000,
            directionNav: false,
    		dots:true
        });
</script>

<style>
  ol.flex-control-nav {
    display: block;
    z-index: 99;
}

.flex-control-nav {
    width: 100%;
    position: absolute;
    bottom: 0;
    text-align: center;
}
  #page h1 {
    padding-bottom: 5px;
    margin-bottom: 0;
    width: 98%;
}
</style>