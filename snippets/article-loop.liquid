        <div class="author_img">
          {% assign authorImage = article.author.first | append:'_' | append: article.author.last | append:'.jpg' %}


        </div>
      </div>
      
      <div class="d_blg">
      
      <h2><a href="{{ article.url }}">{{ article.title }}</a>{{ article.published_at | time_tag: '%b  %Y' }}</h2>
