      {% endif %}
           {% if template != 'index' %}
      {% if article.tags.size > 0 %}
      <ul class="centered-tags">
        {% for tag in article.tags %} 
        <li class="tags">
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}">
            {{ tag }}
          </a>
        </li>
        {% endfor %}
      </ul>
      {% endif %} 
      <div class="readmore new_btn">
        <a href="{{ article.url }}">Learn more</a>
      </div>
      {% endif %}
      </div>
      
      
      
     
      
     
    </div>
  </div>
</div>
{% endif %}
